@if (ShowConfirmModal)
{
    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@ChildContent</p>
                </div>
                <div class="modal-footer">
                    <button @onclick="OnSubmit" type="button" class="btn btn-primary">@ButtonTextSubmit</button>
                    <button @onclick="OnCancel" type="button" class="btn btn-secondary" data-dismiss="modal">@ButtonTextCancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool ShowConfirmModal { get; set; } = false;
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string ButtonTextCancel { get; set; }
    [Parameter]
    public string ButtonTextSubmit { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public EventCallback OnCancel { get; set; }
    [Parameter]
    public EventCallback OnSubmit { get; set; }

    public void Show() => ShowConfirmModal = true;
    public void Hide() => ShowConfirmModal = false;

}